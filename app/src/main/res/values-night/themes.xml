<resources>
    <style name="Theme.Gamemology" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Override only colors, not text appearances -->
        <item name="colorPrimary">@color/primary_dark_theme</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/accent_dark_theme</item>
        <item name="colorSecondaryVariant">@color/accent_dark_variant</item>

        <item name="android:statusBarColor">@color/dark_surface</item>
        <item name="android:navigationBarColor">@color/dark_surface</item>

        <item name="backgroundColor">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOnSurface">@color/text_secondary_dark</item>

        <!-- Text colors for night mode -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>

        <item name="android:windowLightStatusBar">false</item>

        <!-- Profile specific attributes for dark mode -->

        <item name="cardBackgroundColor">@color/profile_card_background_dark</item>

        <!-- These additional attributes help with proper dark mode theming -->
        <item name="dividerColor">@color/profile_divider_dark</item>
        <item name="colorOutline">@color/profile_divider_dark</item>
        <!-- Add these style references for profile dark mode -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- Profile colors to reference in layouts -->
        <item name="profileHeaderColor">@color/blue_dark_mode</item>
        <item name="profileTextColor">@color/text_primary_dark</item>
        <item name="profileIconTint">@color/primary_dark_theme</item>
    </style>

    <!-- Dark theme card style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/profile_card_background_dark</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <!-- Dark theme profile header text style -->
    <style name="TextAppearance.Gamemology.ProfileHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/blue_dark_mode</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>




</resources>