<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Gamemology" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>

        <!-- Background colors -->
        <item name="backgroundColor">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOnSurface">@color/text_secondary_light</item>

        <!-- Text colors explicitly defined to fix null text color issues -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorHint">@color/text_hint_light</item>
        <!-- Add Material 3 to Material Components mappings -->


        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Gamemology.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Gamemology.Headline2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Gamemology.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Gamemology.Body1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Gamemology.Caption</item>

        <!-- Material 3 compatibility text appearances -->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Gamemology.Body1</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Gamemology.Body2</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Gamemology.Headline2</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Gamemology.Subtitle1</item>

        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>

        <!-- Edge-to-edge layout -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.Gamemology.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.Gamemology</item>

        <!-- For Android 12+ -->
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/splash_branding</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>

        <!-- Status and navigation bar colors -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <!-- Future Material 3 theme (don't use until ready to migrate) -->
    <style name="Base.Theme.Gamemology" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Placeholder for future Material 3 migration -->
    </style>
</resources>