<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base layer (full background) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurface" />
            <stroke
                android:width="1dp"
                android:color="?attr/colorPrimaryVariant"
                android:alpha="0.1" />
        </shape>
    </item>

    <!-- Left border accent (positioned at the left edge) -->
    <item android:left="0dp" android:right="240dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
        </shape>
    </item>
</layer-list>